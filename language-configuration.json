{
    "comments": {
        "lineComment": "!"
    },
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""]
    ],
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""]
    ],
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(if|ifnot|else|else_if|loop|when|is|default|fastpush|push|boldon|underon)\\b.*$",
        "decreaseIndentPattern": "^\\s*(\\.|(fastpop|pop|boldoff|underoff)\\b)"
    }
}