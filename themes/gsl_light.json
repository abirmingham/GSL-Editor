{
    "name": "GSL Light",
	"type": "light",
	"$schema": "vscode://schemas/color-theme",
	"include": "./light_plus.json",
	"tokenColors": [
		{
            "scope": "comment",
            "settings": {
                "foreground": "#A0A0A0"
            }
		},
		{
			"scope": "constant.numeric",
			"settings": {
				"foreground": "#FD971F"
			}
		},
		{
			"scope": "keyword.gsl",
			"settings": {
				"foreground": "#000000"
			}
		},
		{
			"scope": "keyword.gsl.control",
			"settings": {
				"foreground": "#0000ff"
			}
		},
		{
			"scope": "keyword.gsl.stop",
			"settings": {
				"foreground": "#0000ff"
			}
		},
		{
			"scope": "keyword.gsl.stack",
			"settings": {
				"foreground": "#0000ff"
			}
		},
		{
            "scope": "matchmarker.gsl.name",
            "settings": {
                "foreground": "#008000"
            }
		},
		{
			"scope": "token.gsl",
			"settings": {
				"foreground": "#AE81FF"
			}
		},
		{
			"scope": "variable.gsl",
			"settings": {
				"foreground": "#267f99"
			}
		},
		{
            "scope": "variable.gsl.register",
            "settings": {
                "foreground": "#267f99"
            }
        },
		{
			"scope": "variable.gsl.system",
			"settings": {
				"foreground": "#AE81FF"
			}
		},
		{
			"scope": "variable.gsl.node",
			"settings": {
				"foreground": "#AF00DB"
			}
		},
		{
			"scope": "variable.gsl.field",
			"settings": {
				"foreground": "#FF00C8"
			}
		}
    ],
    "colors": {
        "editorLineNumber.activeForeground": "#999999",
        "editorIndentGuide.activeBackground": "#999999"  
    }
}