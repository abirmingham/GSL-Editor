{
    "name": "gsl",
    "displayName": "GSL",
    "description": "GSL Editor",
    "version": "0.0.8",
    "publisher": "patricktrant",
    "author": {
        "name": "Patrick Trant",
        "email": "estild@gmail.com"
    },
    "engines": {
        "vscode": "^1.10.0"
    },
    "categories": [
        "Languages"
    ],
    "activationEvents": [
        "*"
    ],
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://gitlab.com/GSIV/GSL-Editor.git"
    },
    "main": "extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.gslDownload",
                "title": "Download",
                "category": "GSL"
            },
            {
                "command": "extension.gslUpload",
                "title": "Upload",
                "category": "GSL"
            }
        ],
        "languages": [
            {
                "id": "gsl",
                "aliases": [
                    "GSL",
                    "gsl"
                ],
                "filenamePatterns": [
                    "S[0-9][0-9][0-9][0-9][0-9]"
                ],
                "extensions": [
                    ".gsl"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "gsl",
                "scopeName": "source.gsl",
                "path": "./syntaxes/gsl.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "gsl",
                "path": "./snippets/gsl.json"
            }
        ],
        "keybindings": [
            {
                "command": "extension.gslDownload",
                "key": "ctrl+d",
                "mac": "cmd+d"
            },
            {
                "command": "extension.gslUpload",
                "key": "ctrl+u",
                "mac": "cmd+u",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.showMatchmarkers",
                "key": "ctrl+m",
                "mac": "cmd+m",
                "when": "editorTextFocus"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "GSL",
            "properties": {
                "gsl.account": {
                    "type": [
                        "string"
                    ],
                    "default": "",
                    "description": "Play.net account name."
                },
                "gsl.password": {
                    "type": [
                        "string"
                    ],
                    "default": "",
                    "description": "Play.net account password."
                },
                "gsl.game": {
                    "type": [
                        "string"
                    ],
                    "enum": [
                        "GemStone IV Development",
                        "GemStone IV",
                        "GemStone IV Platinum",
                        "GemStone IV Shattered",
                        "GemStone IV Prime Test",
                        "DragonRealms Development",
                        "DragonRealms",
                        "DragonRealms Platinum",
                        "DragonRealms The Fallen",
                        "DragonRealms Prime Test"
                    ],
                    "default": "GemStone IV Development",
                    "description": "Play.net game to log into."
                },
                "gsl.character": {
                    "type": [
                        "string"
                    ],
                    "default": "",
                    "description": "Play.net character to log into."
                },
                "gsl.alwaysEnabled": {
                    "type": [
                        "boolean"
                    ],
                    "default": true,
                    "description": "Enable to always have the Download/Upload buttons."
                },
                "gsl.displayGameChannel": {
                    "type": [
                        "boolean"
                    ],
                    "default": false,
                    "description": "Enable to display the Game channel when the editor starts."
                },
                "gsl.downloadPath": {
                    "type": [
                        "string"
                    ],
                    "default": "",
                    "description": "Path to save downloaded scripts."
                }
            }
        },
        "configurationDefaults": {
            "[gsl]": {
                "editor.insertSpaces": true,
                "editor.tabSize": 2,
                "editor.wordWrap": "wordWrapColumn",
                "editor.wordWrapColumn": 118,
                "editor.rulers": [
                    118
                ],
                "editor.scrollBeyondLastLine": false,
                "editor.wordBasedSuggestions": false
            }
        }
    }
}